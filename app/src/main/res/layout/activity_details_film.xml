<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity_details_film"
        android:background="#686767">
    <RelativeLayout
            android:id="@+id/backdrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/movie_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:contentDescription="todo" />

        <ImageView
                android:id="@+id/video_play"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:alpha="6"
                android:contentDescription="todo"
                android:src="@drawable/avenger"
                android:visibility="invisible" />
    </RelativeLayout>

    <TextView
            android:id="@+id/name_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="name_movie"
            android:textSize="36sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
    <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:text="date"
            android:textColor="#ffff"
            android:textSize="18sp" android:layout_marginLeft="25dp"/>

    <RatingBar
            android:id="@+id/vote_rating"
            style="@android:style/Widget.Holo.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:alpha="6"
            android:visibility="visible" android:layout_marginLeft="20dp"/>

    <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            android:text="des"
            android:textColor="#ffff"
            android:textSize="16sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            />

</LinearLayout>